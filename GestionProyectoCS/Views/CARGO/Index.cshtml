@model IEnumerable<GestionProyectoCS.Models.Datos.CARGO>

@{
    ViewBag.Title = "Cargos";
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">

<div class="app-main">
    @Html.Partial("_SideBar")
    <div class="app-main__outer">
        <div class="app-main__inner">
            <div class="app-page-title">
                <div class="page-title-wrapper">
                    <div class="page-title-heading">
                        <div class="page-title-icon">
                            <i class="pe-7s-id icon-gradient bg-warm-flame">
                            </i>
                        </div>
                        <div>
                            Cargos
                            <div class="page-title-subheading">
                               Cargo de Empleados
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-content">
                <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
                    <div class="main-card mb-3 card">
                        <div class="card-body">
                            <p>
                                @Html.ActionLink("Nuevo Cargo", "Create")
                            </p>
                            <table id="cargos" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>
                                            Cod Cargo
                                        </th>
                                        <th>
                                           Cargo
                                        </th>
                                        <th>
                                            Estado
                                        </th>
                                        <th>
                                            Fecha Creacion
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ID_CARGO)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DESCRIPCION)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ACTIVO)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FECHA_CREACION)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Editar", "Edit", new { id = item.ID_CARGO }) |
                                                @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_CARGO })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>
                                            Cod Cargo
                                        </th>
                                        <th>
                                            Cargo
                                        </th>
                                        <th>
                                            Estado
                                        </th>
                                        <th>
                                            Fecha Creacion
                                        </th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#cargos').DataTable();
        });
    </script>
}

