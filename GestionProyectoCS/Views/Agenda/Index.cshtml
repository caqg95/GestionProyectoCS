@model IEnumerable<GestionProyectoCS.Models.Datos.SpListadoVistasCS_Result>

@{
    ViewBag.Title = "Visitas";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">

<div class="app-main">
    @Html.Partial("_SideBar")
    <div class="app-main__outer">
        <div class="app-main__inner">
            <div class="app-page-title">
                <div class="page-title-wrapper">
                    <div class="page-title-heading">
                        <div class="page-title-icon">
                            <i class="pe-7s-check icon-gradient bg-warm-flame">
                            </i>
                        </div>
                        <div>
                            Visitas
                            <div class="page-title-subheading">
                                Cumplimiento De Visitas
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-content">
                <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
                    <div class="main-card mb-3 card">
                        <div class="card-body">
                            @*<p>
                                    @Html.ActionLink("Create New", "Create")
                                </p>*@
                            <table id="visitas" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>
                                            Cod Visita
                                        </th>
                                        @*<th>
                                                Cod Cliente
                                            </th>*@
                                        <th>
                                            Cliente
                                        </th>
                                        @*<th>
                                                Cod Empleado
                                            </th>*@
                                        <th>
                                            Empleado
                                        </th>
                                        <th>
                                            Asunto
                                        </th>
                                        <th>
                                            Fecha Inicio
                                        </th>
                                        <th>
                                            Fecha Fin
                                        </th>
                                        <th>
                                            Estado
                                        </th>
                                        <th>
                                            Fecha Creacion
                                        </th>
                                        @*<th></th>*@
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ID_VISITA)
                                            </td>
                                            @*<td>
                                                    @Html.DisplayFor(modelItem => item.ID_CLIENTE)
                                                </td>*@
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CLIENTE)
                                            </td>
                                            @*<td>
                                                    @Html.DisplayFor(modelItem => item.ID_EMPLEADO)
                                                </td>*@
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EMPLEADO)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ASUNTO)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FECHA_INICIO)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FECHA_FIN)
                                            </td>
                                            <td>
                                                @{
                                                    switch (item.ESTADO)
                                                    {
                                                        case "POR ATENDER":
                                                            <span class="badge badge-danger">@Html.DisplayFor(modelItem => item.ESTADO)</span>
                                                            break;
                                                        case "ATENDIENDOCE":
                                                            <span class="badge badge-warning">@Html.DisplayFor(modelItem => item.ESTADO)</span>
                                                            break;
                                                        case "TERMINADO":
                                                            <span class="badge badge-success">@Html.DisplayFor(modelItem => item.ESTADO)</span>
                                                            break;
                                                        case "TERMINADO Y APROBADO":
                                                            <span class="badge badge-primary">@Html.DisplayFor(modelItem => item.ESTADO)</span>
                                                            break;
                                                        default:@Html.DisplayFor(modelItem => item.ESTADO) break;
                                                }
                                                }

                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.FECHA_CREACION)
                                            </td>
                                            @*<td>
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID_VISITA }) |
                                                    @Html.ActionLink("Details", "Details", new { id = item.ID_VISITA }) |
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID_VISITA })
                                                </td>*@
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>
                                            Cod Visita
                                        </th>
                                        @*<th>
                                                Cod Cliente
                                            </th>*@
                                        <th>
                                            Cliente
                                        </th>
                                        @*<th>
                                                Cod Empleado
                                            </th>*@
                                        <th>
                                            Empleado
                                        </th>
                                        <th>
                                            Asunto
                                        </th>
                                        <th>
                                            Fecha Inicio
                                        </th>
                                        <th>
                                            Fecha Fin
                                        </th>
                                        <th>
                                            Estado
                                        </th>
                                        <th>
                                            Fecha Creacion
                                        </th>
                                        @*<th></th>*@
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#visitas').DataTable({
                "order": [[7, "asc"]]
            });
        });
    </script>
}
